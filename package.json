{
  "name": "vite-plugin-xagi-monitor",
  "version": "0.1.0",
  "description": "Vite plugin for monitoring errors, logs and HMR updates in development",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:integration": "vitest run tests/integration",
    "test:e2e": "vitest run tests/e2e",
    "test:unit": "vitest run tests/unit",
    "play:install": "pnpm -C playground/console-demo install --force && pnpm -C playground/design-demo install --force && pnpm -C playground/error-demo install --force && pnpm -C playground/whitescreen-demo install --force && pnpm -C playground/full-demo install --force",
    "play:console": "pnpm -C playground/console-demo dev",
    "play:design": "pnpm -C playground/design-demo dev",
    "play:error": "pnpm -C playground/error-demo dev",
    "play:whitescreen": "pnpm -C playground/whitescreen-demo dev",
    "play:full": "pnpm -C playground/full-demo dev"
  },
  "keywords": [
    "vite",
    "plugin",
    "monitor",
    "error-tracking",
    "hmr",
    "devtools"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dongdada29/vite-plugin-xagi-monitor.git"
  },
  "peerDependencies": {
    "vite": "^5.0.0 || ^6.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/ws": "^8.0.0",
    "@vitest/coverage-v8": "^1.0.0",
    "@vitest/ui": "^1.0.0",
    "jsdom": "^23.0.0",
    "typescript": "^5.0.0",
    "vite": "^6.0.0",
    "vitest": "^1.0.0",
    "ws": "^8.0.0"
  }
}